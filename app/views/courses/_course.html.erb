<div class="col s6 m6">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
      <p><%= course.description %></p>
    </div>
    <div class="card-action">
      <div class="row card-action-row">
        <% if logged_in? && !current_user.courses.include?(course) %>
          <%= button_to "Enroll", course_enroll_path(course_id: course.id), method: :post, form_class: "col s3", class: "btn-flat waves-effect orange-text text-lighten-1" %>
        <% end %>
        <%= button_to "Info", course_path(course), form_class: "col s3", class: "btn-flat waves-effect orange-text text-lighten-1" %>
      </div>
    </div>
  </div>
</div>
